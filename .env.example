# Neon PostgreSQL Database Configuration
# Copy this file to .env and fill in your actual credentials

# Required: Neon DB connection string (used by all API serverless functions)
DATABASE_URL=postgres://USER:PASSWORD@YOUR-NEON-HOST:5432/DBNAME?sslmode=require

# Optional: Supabase Postgres connection string (used as a fallback if DATABASE_URL is unavailable)
SUPABASE_DB_URL=postgres://USER:PASSWORD@aws-1-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require&supa=base-pooler.x

# Required: Secret for signing JWT session cookies (min 32 chars recommended)
JWT_SECRET=amari-experience-jwt-secret-2025-secure-key-xK9mP2vL

# Optional: Frontend API base URL (leave empty if same origin / Vercel)
VITE_API_BASE=
